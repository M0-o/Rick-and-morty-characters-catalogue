    <script>
      let episodes = `<%= episode %>`.split(",");
      console.log(episodes);
      let table = document.querySelector("table");

      let getEps = async (episodes) => {
        for (ep of episodes) {
          let episodePromise = await fetch(ep);
          let episodeData = await episodePromise.json();
          table.innerHTML += `<tr>
                  <td>${episodeData.episode}</td>
                  <td>${episodeData.name}</td>
                  <td>${episodeData.air_date}</td>
              </tr>`;
        }
      };
      getEps(episodes);
    </script>
